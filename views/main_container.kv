<MainContainer>:
    main_screen_manager: main_screen_manager
    orientation: "vertical"

    MDNavigationLayout:

        MDScreenManager:
            id: main_screen_manager

            MDScreen:
                name: "content screen"

                MDBoxLayout:
                    orientation: "vertical"

                    MDTopAppBar:
                        title: "Play Play Play"
                        elevation: 4
                        pos_hint: {"top": 1}
                        md_bg_color: app.theme_cls.primary_color
                        specific_text_color: "#4a4939"
                        left_action_items:
                            [['jellyfish-outline', lambda x: nav_drawer.set_state("open")]]

                    MyScreenManager:
                        main_screen_manager: main_screen_manager

        MDNavigationDrawer:
            id: nav_drawer
            radius: (0, 16, 16, 0)
            anchor: "left"

            MDNavigationDrawerMenu:
                type: "standard"

                MDNavigationDrawerHeader:
                    title: "Task Helper Menu"
                    text: "LLK Inc."
                    spacing: "4dp"
                    padding: "12dp", 0, 0, "56dp"

                MDNavigationDrawerLabel:
                    text: "Choose an option"

                DrawerClickableItem:
                    icon: "format-list-numbered"
                    text: "Tasks list (common)"

                DrawerClickableItem:
                    icon: "format-list-numbered"
                    text: "Tasks list (unusual)"

                MDNavigationDrawerDivider:

                DrawerClickableItem:
                    icon: "list-status"
                    text: "Tasks list (freeze)"

                MDNavigationDrawerDivider:

                DrawerClickableItem:
                    icon: "playlist-edit"
                    text: "Loggers"

                MDNavigationDrawerDivider:

                DrawerClickableItem:
                    icon: "account-outline"
                    text: "Personal office"